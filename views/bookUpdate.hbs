<html>
  <head>
    <title>Карманная библиотека</title>
    <meta charset="utf-8" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"
    ></script>
    <link rel="stylesheet" type="text/css" href="/css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="/css/index.css" />
  </head>
  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="#!" class="brand-logo">Карманная библиотека</a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i
            class="material-icons"
          >menu</i></a>
        <ul class="right hide-on-med-and-down">
          <li><a href="/">Список доступных книг</a></li>
          <li class="active"><a href="/create">Добавить книгу</a></li>
          <li><a href="/pfrofile">Профиль</a></li>
        </ul>
      </div>
    </nav>
    <ul class="sidenav" id="mobile-demo">
      <li><a href="/">Список доступных книг</a></li>
      <li class="active"><a href="/create">Добавить книгу</a></li>
      <li><a href="/pfrofile">Профиль</a></li>
    </ul>
    <section class="content-wrapper">
      <h1>Добавить книгу</h1>
      <form class="create-form" method="POST" action="/{{book._id}}" enctype="multipart/form-data">
        <div class="row">
          <div class="input-field col s12">
            <input
              placeholder="название книги"
              id="title"
              type="text"
              class="validate"
              name="title"
              value="{{book.title}}"
            />
            <label for="title">Название книжки</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <textarea
              id="description"
              class="materialize-textarea"
              data-length="120"
              name="description"
            >{{book.description}}</textarea>
            <label for="description">Описание книги</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input
              placeholder="Александр Сергеевич Пушкин"
              id="authors"
              type="text"
              class="validate"
              name="authors"
              value="{{book.authors}}"
            />
            <label for="authors">Авторы</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input
              placeholder="сказки, фентези"
              id="favorite"
              type="text"
              class="validate"
              name="favorite"
              value="{{book.favorite}}"
            />
            <label for="favorite">Жанры</label>
          </div>
        </div>
        {{! <div class="row">
          <div class="file-field input-field col s6">
            <div class="btn">
              <span>Обложка книги</span>
              <input
                type="file"
                name="fileCover"
                accept="application/pdf, image/png, image/jpeg, image/jpg"
              />
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" />
            </div>
          </div>
          <div class="file-field input-field col s6">
            <div class="btn">
              <span>Книга</span>
              <input
                type="file"
                name="fileBook"
                accept="application/pdf, image/png, image/jpeg, image/jpg"
              />
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" />
            </div>
          </div>
        </div> }}
        <button class="btn waves-effect waves-light" type="submit">Submit
          <i class="material-icons right">send</i>
        </button>
      </form>
    </section>
  </body>
  <script>
    document.addEventListener('DOMContentLoaded', function() { var elems =
    document.querySelectorAll('.sidenav'); var instances = M.Sidenav.init(elems, {}); });
  </script>
</html>